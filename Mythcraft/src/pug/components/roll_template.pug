
rolltemplate.sheet-rolltemplate-rolls
	.sheet-template-container
		// - Display a header on the template -
		.sheet-template-header 
			h1 {{#header}}{{header}}{{/header}}
		// - Display the dice roll in the template -
		.sheet-template-body
		
			| {{#dice}}
			.sheet-template-roll
				span {{dice}} 
			| {{/dice}}
		
			| {{#tags}}
			.sheet-template-tags
				span {{tags}}
			| {{/tags}}

			| {{#action}}
			.sheet-template-action
				span {{action}}
			| {{/action}}


			| {{#type}}
			.sheet-template-type
				span {{type}}
			| {{/type}}


			| {{#damage}}
			.sheet-template-damage
				span {{damage}}
			| {{/damage}}


			| {{#description}}
			.sheet-template-desc
				span {{description}}
			| {{/description}}

	
