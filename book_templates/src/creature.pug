mixin statLabel(name)
    | {{##{name}}}
    .grid.grid-flow-col.gap-1.col-auto-fr
        span.font-bold.capitalize #{name.replace(/_/g, ' ')}:
        span.capitalize {{#{name}}}  
    | {{/#{name}}}

listresult 
    .creature.template.grid.gap-2
        .header.grid
            h1.primary.font-h1 
                |{{Name}}
            i.font-base.third {{#level}} Monster Level: {{level}} {{/level}}
            i.font-base.third.capitalize {{#size}} {{size}}. {{/size}} {{#tags}} {{tags}} {{/tags}}
        .body.font-base.third.grid.gap-4
            .grid.gap-2
                .attributes.grid.grid-flow-col.gap-2.w-full.h-full.auto-cols-min.justify-around
                    -const coreAttributes = ["strength", "dexterity", "endurance", "awareness", "intellect", "charisma"];
                    each val in coreAttributes
                        .grid.justify-center.items-center
                            .circle.rounded-full.border.grid.justify-center.items-center.font-bold
                                span.uppercase.text-center #{val.slice(0, 3)}
                                span.text-center {{##{val}}} {{#{val}}} {{/#{val}}}
                    - const derivedAttributes = ['reflexes', 'fortitude', 'anticipation', 'logic', 'willpower'];
                .derived.grid.grid-flow-col.gap-2.w-full.h-full.auto-cols-min.justify-around
                    .circle.invisible
                    each val in derivedAttributes
                        .grid.justify-center.items-center
                            .circle.rounded-full.border.grid.justify-center.items-center.font-bold
                                -const shortNames =  val === "luck" ? val : val.slice(0, 3);
                                span.uppercase.text-center #{shortNames}
                                span.text-center {{##{val}}} {{#{val}}} {{/#{val}}}
            .stats.grid.grid-flow-col.gap-2.w-full.h-full 
                .armor.grid.w-full.h-full.content-start
                    each val in ["armor_rating", "hp", "speed"]
                        +statLabel(val)
                .resist.grid.w-full.h-full.content-start
                    .grid.gap-2.grid-flow-col.items-center.auto-cols-max
                        each val in ["resist", "immune"]
                            +statLabel(val)
                    each val in ["vulnerable",  "senses",  "traits"]
                        +statLabel(val)

            | {{#skills}}
            .grid.gap-2.w-full.h-full
                h2.uppercase.primary.text-center skills

                |{{!skills}}
                .grid
                    |{{[Name]}}
                    span ({{[Attribute]}})
                    span +{{[Modifier]}}
                | {{/skills}}
            | {{/skills}}


            | {{#features}}
            .grid.gap-2.w-full.h-full
                h2.uppercase.primary.text-center features

                |{{!features}}
                .grid
                    |{{[Name]}}
                | {{/features}}
            | {{/features}}


            | {{#actions}}
            .grid.gap-2.w-full.h-full
                h2.uppercase.primary.text-center actions

                |{{#action_description}}
                .grid
                    |{{action_description}}
                |{{/action_description}}

                |{{!actions}}
                span.font-bold.capitalize {{[Name]}}
                span.capitalize 
                |{{/actions}}
            
            | {{/actions}}
                
            | {{#reactions}}
            .grid.gap-2.w-full.h-full
                h2.uppercase.primary.text-center reactions

                |{{!reactions}}
                .grid
                    |{{[Name]}}
                | {{/reactions}}
            | {{/reactions}}



            each val in ["data-List",  "dr", "dt",  ]
                | {{##{val}}}
                .grid.grid-flow-col.gap-2.col-auto-fr
                    span.font-bold.capitalize #{val.replace(/_/g, ' ')}:
                    span.capitalize {{#{val}}}  
                | {{/#{val}}} 
